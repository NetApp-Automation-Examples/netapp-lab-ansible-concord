Exporters:
  prometheus1:
    exporter: Prometheus
    addr: 0.0.0.0
    port_range: 2000-2030  # <====== adjust to be greater than equal to the number of monitored clusters

Defaults:
  collectors:
    - Zapi
    - ZapiPerf
    - EMS
  use_insecure_tls: true   # <====== adjust as needed to enable/disable TLS checks 
  exporters:
    - prometheus1

Pollers:
{% for cluster in harvest_clusters %}
  cluster:                # <====== add your cluster(s) here, they use the exporter defined three lines above
    datacenter: {{ cluster.datacenter | default('lab')}}
    addr: {{ cluster.addr }}
    auth_style: basic_auth
    username: {{ cluster.username }}
    password: {{ cluster.password }}
{% endfor %}
